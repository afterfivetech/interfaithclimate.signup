<div class="state-sign">
    <h3 class="widget_title">STATEMENT SIGNATORIES</h3>
    <div class="textwidget" tal:define="contents viewlet/contents" tal:condition="contents">
        <tal:entry tal:repeat="content contents">
            <p>
                <strong tal:content="python: content['name']"/>
                <br><span tal:content="python: content['designation']"/>
                <span tal:content="python: content['organization']"/>
                <br><span tal:content="python: content['location']"/>
            </p>
        </tal:entry>
    </div>
</div>